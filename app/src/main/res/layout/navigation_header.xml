<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgmaybe_header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="10dp"

        android:id="@+id/nav_profile_pic"
        android:layout_width="@dimen/circle_view_diameter"
        android:layout_height="@dimen/circle_view_diameter"
        android:src="@drawable/profile"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_profile_pic"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/username"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="@dimen/nav_username_textsize"
        android:typeface="normal" />


</RelativeLayout>