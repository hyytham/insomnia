<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_register"
    tools:context=".RegisterActivity"
    android:background="@drawable/bgmaybe_">

    <ImageView
        android:id="@+id/signUpIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/reg_screen_logo_height"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:drawableStart="@drawable/email"
        android:id="@+id/reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/reg_password"
        android:layout_alignStart="@id/reg_password"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Email.."
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/input"/>

    <EditText
        android:id="@+id/reg_password"
        android:background="@drawable/input"
        android:drawableStart="@drawable/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="Password.."
        android:inputType="textPassword"
        android:padding="10dp"/>

    <EditText
        android:drawableStart="@drawable/password"
        android:id="@+id/reg_confirm_password"
        android:background="@drawable/input"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/reg_password"
        android:layout_below="@id/reg_password"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Kaman marra.."
        android:inputType="textPassword" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/friends" />
</RelativeLayout>